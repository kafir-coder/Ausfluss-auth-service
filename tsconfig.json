{
   "compilerOptions": {
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "module": "es6",
      "target": "es6",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "noEmit": true,
      "strict": true,
      "lib": [
         "es2020"
      ],
      "strictPropertyInitialization": false
   },
   "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
}



